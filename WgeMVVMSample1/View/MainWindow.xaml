<Window x:Class="WgeMVVMSample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WgeMVVMSample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Button Content="NormalWgeCommand" DockPanel.Dock ="Top" Margin="5" Command="{Binding NormalCommand}"/> 
        <CheckBox IsChecked="{Binding CanExecute}" Content="CanExecute" Margin="5"/>
        <Button Content="CanExecuteWgeCommand" Margin="5" Command="{Binding CanExecuteCommand}" />
        <DockPanel Margin="5">
            <TextBlock Text="Parameter:" VerticalAlignment="Center"/>
            <TextBox Name="txtParam" DockPanel.Dock="Top" Margin="5"/>          
        </DockPanel>
        <Button Content="ParameterCanExecuteWgeCommand" Margin="5" Command="{Binding ParamCommand}" CommandParameter="{Binding ElementName=txtParam,Path=Text}" />
    </StackPanel>
</Window>
